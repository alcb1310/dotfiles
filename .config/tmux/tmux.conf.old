# set-option -sa terminal-overrides ",xterm*:Tc"
set-option -sa terminal-features ',XXX:RGB'
# set -g default-terminal "screen-256color"

# Enable mouse support inside of tmux
set -g mouse off

# Set base index to 1 for easier navigation
set -g base-index 1
set -g pane-base-index 1
set-window-option -g renumber-windows on

unbind C-b
set -g prefix C-Space
bind C-Space send-prefix

set -g @plugin 'tmux-plugins/tpm'
# set -g @plugin "nordtheme/tmux"
set -g @plugin 'jimeh/tmuxifier'
set -g @plugin 'christoomey/vim-tmux-navigator'
set -g @plugin 'tmux-plugins/tmux-yank'
set -g @plugin 'wfxr/tmux-fzf-url'
set -g @plugin 'dracula/tmux'
set -g @plugin 'tmux-plugins/resurrect'
set -g @plugin 'tmux-plugins/continuum'

set -g @continuum-restore "on"
set -g @continuum-boot 'on'

# for images
set -gq allow-passthrough on

# Display the tmux bar at the top of the screen
set-option -g status-position top
set -g @dracula-battery-label "Battery"
set -g @dracula-show-fahrenheit false
set -g @dracula-show-left-icon session
set -g @dracula-fixed-location "Quito"
set -g @dracula-time-format "%F %R"

# set vi-mode
set-window-option -g mode-keys vi

# keybindings
bind r source-file ~/.config/tmux/tmux.conf \; display-message "Reloaded"
bind-key -T copy-mode-vi v send-keys -X begin-selection
bind-key -T copy-mode-vi C-v send-keys -X rectangle-toggle
bind-key -T copy-mode-vi y send-keys -X copy-selection-and-cancel

bind-key -r l resize-pane -R 2
bind-key -r h resize-pane -L 2
bind-key -r j resize-pane -D 2
bind-key -r k resize-pane -U 2 

bind '"' split-window -v -c "#{pane_current_path}"
bind % split-window -h -c "#{pane_current_path}"

set -g allow-passthrough all
set -ga update-environment TERM
set -ga update-environment TERM_PROGRAM

# sesh config
bind-key "T" run-shell "sesh connect \"$(
	sesh list | fzf-tmux -p 55%,60% \
		--no-sort --border-label ' sesh ' --prompt '‚ö°  ' \
		--header '  ^a all ^t tmux ^x zoxide ^d tmux kill ^f find' \
		--bind 'tab:down,btab:up' \
		--bind 'ctrl-a:change-prompt(‚ö°  )+reload(sesh list)' \
		--bind 'ctrl-t:change-prompt(ü™ü  )+reload(sesh list -t)' \
		--bind 'ctrl-x:change-prompt(üìÅ  )+reload(sesh list -z)' \
		--bind 'ctrl-f:change-prompt(üîé  )+reload(fd -H -d 2 -t d -E .Trash . ~)' \
		--bind 'ctrl-d:execute(tmux kill-session -t {})+change-prompt(‚ö°  )+reload(sesh list)'
)\""

run '~/.config/tmux/plugins/tpm/tpm'
